<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewTransferHeaderLLId"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/cardBackground"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transferIndicator"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewTransferHeaderDateId"
            android:layout_width="180dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:text="1st April '15"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewTransferCurIVId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:text="INR"
                android:textSize="18sp"
                android:textColor="@color/finappleCurrencyCodeColorLight"
                android:gravity="center" />

            <TextView
                android:id="@+id/viewTransferDayTotalTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999.99M"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approx"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/viewTransferDayCountTVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/circle_counter_white_text_view"
            android:gravity="center"
            android:maxLength="2"
            android:text="99"
            android:textColor="@color/finappleTheme"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>