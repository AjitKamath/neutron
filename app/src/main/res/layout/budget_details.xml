<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/budgetDetailsLLId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/screen_components_padding_from_walls"
    android:paddingLeft="@dimen/screen_components_padding_from_walls"
    android:paddingRight="@dimen/screen_components_padding_from_walls"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/budgetDetailsDeleteTVId"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="DELETE"
            android:textColor="@color/finappleCurrencyNegColor"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/budgetDetailsEditTVId"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="EDIT"
                android:textColor="@color/finappleCurrencyPosColor"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/budgetDetailsGroupIVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shopping" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/budgetDetailsNameTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Monthly Entertainment Budget"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/budgetDetailsCurrency1TVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR"
                        android:textColor="@color/finappleCurrencyCodeColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/budgetDetailsTotalTVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="9,99,99,999"
                        android:textColor="@color/finappleCurrencyNegColor"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="/"
                        android:textColor="@color/finappleThemeDark"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/budgetDetailsCurrency2TVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR"
                        android:textColor="@color/finappleCurrencyCodeColor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/budgetDetailsAmountTVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="9,99,99,999"
                        android:textColor="@color/finappleCurrencyNegColor"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/budgetDetailsGroupTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOPPING"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/budgetDetailsTypeTVId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MONTHLY"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/budgetDetailsNoteLLId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="NOTE">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/budgetDetailsNoteTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once Upon A Time There Lived A King"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>