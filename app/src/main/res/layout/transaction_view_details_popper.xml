<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/card_background_selector"
    android:id="@+id/tranDtlPopperLLId"
    android:gravity="center"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tranDtlPopperSchTranLLId"
                android:layout_width="250dp"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tranDtlPopperTranDateTVId"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="28 mar '15"
                    android:textColor="@color/Orange"
                    android:textSize="15sp"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/tranDtlPopperEditIVId"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/edit_grey"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tranDtlPopperDelIVId"
                android:onClick="showMessagePopper"
                android:src="@drawable/delete_grey"/>
        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<TextView
                android:id="@+id/tranDtlPopperTranTypTVId"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@drawable/circle_expense_text_view"
                android:gravity="center"
                android:maxLength="1"
                android:text="E"
                android:textColor="@color/white"
                android:textSize="22sp"/>-->

            <ImageView
                android:layout_marginLeft="-15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/india"/>

            <TextView
                android:id="@+id/tranDtlPopperAmtTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="-999.99"
                android:textColor="@color/negativeButtonColor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="+"
                android:textColor="@color/finappleCurrencyApproxColor" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tranDtlPopperTranNameTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MMMMMMMMM"
                android:textColor="@color/finappleThemeDark"
                android:textSize="27dp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="0.5dp"
            android:background="@color/finappleTheme" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/tertiaryText"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tranDtlPopperCatTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MMMMMMMMM"
                android:maxLength="25"
                android:textColor="@color/finappleTheme"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/tertiaryText"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tranDtlPopperAccTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MMMMMMMMM"
                android:maxLength="25"
                android:textColor="@color/finappleTheme"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Spent On"
                android:textColor="@color/tertiaryText"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tranDtlPopperSpntOnTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MMMMMMMMM"
                android:maxLength="25"
                android:textColor="@color/finappleTheme"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tranDtlPopperNoteLLId"
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textColor="@color/tertiaryText"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tranDtlPopperNoteTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MMMMMMMMMMMMMMMMMM"
                android:maxLength="50"
                android:textColor="@color/finappleTheme"
                android:textSize="20sp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"
            android:background="@color/finappleTheme" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="created on:"
                android:textColor="@color/greyDays"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tranDtlPopperCreateTVId"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="28 mar '15"
                android:textColor="@color/Red"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="last updated:"
                android:textColor="@color/greyDays"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tranDtlPopperUpdtdTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="never"
                android:textColor="@color/Red"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>