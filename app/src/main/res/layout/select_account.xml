<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountsRLId"
    android:layout_width="@dimen/fragment_full_width"
    android:layout_height="@dimen/fragment_full_height"
    android:layout_gravity="center"
    android:layout_margin="@dimen/screen_components_padding_from_walls"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical"
    app:theme="@style/AppTheme">

    <!-- header -->

    <LinearLayout
        android:id="@+id/accountsHeaderLLId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/finappleTheme"
        android:gravity="center_vertical"
        android:padding="@dimen/screen_components_padding_from_walls"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="CHOOSE AN ACCOUNT"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>

    <!--Page-->
    <LinearLayout
        android:id="@+id/accountsContentLLId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/accountsHeaderLLId"
        android:orientation="vertical"
        android:paddingLeft="@dimen/screen_components_padding_from_walls"
        android:paddingRight="@dimen/screen_components_padding_from_walls"
        android:paddingBottom="@dimen/screen_components_padding_from_walls">

        <ListView
            android:id="@+id/accountsContentLVId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/select_account_account">

        </ListView>

    </LinearLayout>
</RelativeLayout>