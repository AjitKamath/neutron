<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accountLLId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:id="@+id/accountIVId"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/cash" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="CASH"
            android:textColor="@color/formSpinnerDark"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountCurrencyTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="INR"
                android:textColor="@color/finappleCurrencyCodeColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/accountAmountTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="1,078"
                android:textColor="@color/finappleCurrencyNegColor"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">

        <ImageView
            android:id="@+id/accountDeleteIVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/delete_small_grey"
            android:text="MODIFY" />

        <ImageView
            android:id="@+id/accountModifyIVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/write_grey"
            android:text="MODIFY" />

    </LinearLayout>

</LinearLayout>