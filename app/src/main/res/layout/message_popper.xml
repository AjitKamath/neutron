<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/msgPoprLLId"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="vertical">

        <TextView
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgPoprMsgTVId"
            android:textColor="@color/finappleTheme"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="Discard the changes ?"/>


        <LinearLayout
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <LinearLayout
                android:background="@drawable/negative_button"
                android:clickable="true"
                android:gravity="center"
                android:id="@+id/msgPoprPosLLId"
                android:layout_height="fill_parent"
                android:layout_width="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/tick_white" />

                <TextView
                    android:id="@+id/msgPoprNegTVId"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Yes"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
            </LinearLayout>

            <View
                android:background="@android:color/white"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:layout_width="0.5dp"/>

            <LinearLayout
                android:background="@drawable/positive_button"
                android:id="@+id/msgPoprNegLLId"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="fill_parent"
                android:layout_width="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cancel"/>

                <TextView
                    android:id="@+id/msgPoprPosTVId"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="No"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>