<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/calendarBudgetLLId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/calendarBdgTypeTVId"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLength="1"
        android:background="@drawable/circle_week_text_view"
        android:text="M"
        android:textColor="@color/white"
        android:textSize="8sp"/>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calendarBdgGrpTypeTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="25"
            android:text="MMMMMMMMM"
            android:textColor="@color/text"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendarBdgValLLId"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <!--<View
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:background="@color/finappleTheme" />-->

        <ImageView
            android:id="@+id/calendarBdgCurIVId"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/india"
            android:gravity="center"/>

        <TextView
            android:id="@+id/calendarBdgTotalSpntTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:maxLength="8"
            android:text="-999.99K"
            android:textColor="@color/finappleCurrencyPosColor"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/calendarBdgApprxTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="@string/approx"
            android:textColor="@color/finappleCurrencyApproxColor"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:maxLength="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="/"
            android:textColor="@color/finappleCurrencyDividerColor"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/calendarBdgCapTVId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:maxLength="7"
            android:text="999.99K"
            android:textColor="@color/finappleCurrencyPosColor"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="@string/approx"
            android:textColor="@color/finappleCurrencyApproxColor"
            android:textSize="10dp"/>

    </LinearLayout>


</LinearLayout>
