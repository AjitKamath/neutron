<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/registerRLId"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/registerHeaderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/addAccHeaderBackImgId"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:tag="BACK"
                android:background="@drawable/back_black"
                android:onClick="onBackClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Register into"
                android:textColor="@color/Orange"
                android:background="@color/white"
                android:textStyle="italic"
                android:textSize="30sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name_main"
                android:textColor="@color/finappleTheme"
                android:background="@color/white"
                android:textStyle="italic"
                android:textSize="30sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/registerHeaderId"
        android:id="@+id/registerStepsOrbsLLId">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/finished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/registerContentLLId"
        android:layout_width="fill_parent"
        android:layout_height="477dp"
        android:layout_below="@+id/registerStepsOrbsLLId"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/registerUsernameETId"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:hint="username"
            android:text="ajitkamath47"
            android:inputType="text"
            android:maxLength="25"
            android:background="@drawable/edit_text_border"
            android:maxLines="1"
            android:textColor="@color/Black"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/registerPasswordETId"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:hint="password"
            android:text="newton"
            android:inputType="textPassword"
            android:maxLength="25"
            android:background="@drawable/edit_text_border"
            android:maxLines="1"
            android:textColor="@color/Black"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/registerRepeatPasswordETId"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:hint="repeat password"
            android:text="newton"
            android:inputType="textPassword"
            android:maxLength="25"
            android:background="@drawable/edit_text_border"
            android:maxLines="1"
            android:textColor="@color/Black"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Already Registered ?"
            android:textColor="@color/finappleThemeDark"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/registerContentLLId"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="goToRegisterProfilePersonal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/oval_buttons_text_view"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
