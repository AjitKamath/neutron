<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:id="@+id/calendarGridDayGL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:orientation="horizontal">

    <GridLayout
        android:id="@+id/calendarGridDayContentGL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/circle_calendar_no_tap"
        android:columnCount="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/calendarDayTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/Black"
                android:textSize="17sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calendarCellSchTransactionIndicatorTVId"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/circle_calendar_schedule_transaction_indicator"
                android:visibility="visible" />

            <TextView
                android:id="@+id/calendarCellTransactionIndicatorTVId"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/circle_calendar_transaction_indicator"
                android:visibility="visible" />

            <TextView
                android:id="@+id/calendarCellSchTransferIndicatorTVId"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/circle_calendar_schedule_transfer_indicator"
                android:visibility="visible" />

            <TextView
                android:id="@+id/calendarCellTransferIndicatorTVId"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/circle_calendar_transfer_indicator"
                android:visibility="visible" />
        </LinearLayout>

    </GridLayout>

</GridLayout>