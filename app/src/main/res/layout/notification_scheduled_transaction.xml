<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notifiSchTransactLLId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cardBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/finappleTheme"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/home"
            android:onClick="onHomeClick" />

        <TextView
            android:id="@+id/settingsLabelTVId"
            android:layout_width="290dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Scheduled Transaction"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/delete_white"
            android:onClick="onHomeClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="485dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/card_background_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/india" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="-999.99M"
                    android:textColor="@color/finappleCurrencyNegColor"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="MMMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/finappleTheme" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="MMMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="MMMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:text="Spent On"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="MMMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:text="Note"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="MMMMMMMMMMMMMMMMMMMMMM"
                    android:textColor="@color/tertiaryText"
                    android:textSize="22sp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/finappleTheme" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:text="Schedule"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="MMMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="Next Schedule"
                    android:gravity="right"
                    android:textColor="@color/tertiaryText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="12 Aug '15"
                    android:textColor="@color/orrange"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_marginTop="2dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/finappleTheme" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Created On"
                    android:textColor="@color/tertiaryText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="143dp"
                    android:layout_height="fill_parent"
                    android:text="12 Aug '15"
                    android:textColor="@color/orrange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Last Updated On"
                    android:textColor="@color/tertiaryText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="12 Aug '15"
                    android:textColor="@color/orrange"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:onClick="showTransactionPopper"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/oval_buttons_text_view"
                android:gravity="center"
                android:text="ADD"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:onClick="showTransferPopper"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/calendarTransferTVId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/oval_buttons_text_view"
                android:gravity="center"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>