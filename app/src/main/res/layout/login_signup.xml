<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loginRLId"
    android:background="@color/login_bg"
    android:padding="@dimen/screen_components_padding_from_walls"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/loginSignUpHeaderLLId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="right">

        <TextView
            android:id="@+id/loginSignUpTVId"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

    </LinearLayout>

    <com.finappl.customComponents.CustomLoginViewPager
        android:layout_below="@+id/loginSignUpHeaderLLId"
        android:id="@+id/loginVPId"
        android:padding="@dimen/screen_components_padding_from_walls"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_below="@+id/loginVPId"
        android:layout_width="match_parent"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginSignUpWithTVId"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR LOGIN WITH"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/loginSignUpUsingGoogleTVId"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOOGLE"
            android:textColor="@color/googleRed"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginSignUpUsingFacebookButtonId"
            android:layout_width="wrap_content"
            android:text="facebook"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>