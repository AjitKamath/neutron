<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedTransferAddUpdRLId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/cardBackground"
    android:gravity="right"
    android:orientation="vertical"
    tools:context=".ExpensePageView">

    <!-- header -->

    <LinearLayout
        android:elevation="@dimen/layout_header_elevation"
        android:id="@+id/schedTransferAddUpdHeaderLLId"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_header_size"
        android:background="@color/finappleTheme"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/schedTransferAddUpdBackImgId"
            android:layout_width="@dimen/image_header_size"
            android:layout_height="@dimen/image_header_size"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back"
            android:onClick="showMessagePopper"
            android:tag="BACK" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Scheduled Transfer"
            android:textColor="@color/white"
            android:textSize="@dimen/text_header_title_size" />

        <TextView
            android:id="@+id/schedTransferAddUpdDateTVId"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:onClick="showDatePicker"
            android:paddingRight="5dp"
            android:text="99 Sep '15"
            android:textColor="@color/white"
            android:textSize="@dimen/text_header_title_size" />

    </LinearLayout>

    <!--Page-->
    <ScrollView
        android:id="@+id/addUpdatePageSVId"
        android:layout_width="fill_parent"
        android:layout_height="490dp"
        android:layout_below="@+id/schedTransferAddUpdHeaderLLId">

        <LinearLayout
            android:id="@+id/schedTransferAddUpdPageLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/basicLLId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="0.5dp">

                    <TextView
                        android:id="@+id/schedTransferAddUpdTVId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transferIndicator"
                        android:paddingLeft="10dp"
                        android:text="Transfer"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="INR"
                                android:textSize="20sp"
                                android:textColor="@color/finappleCurrencyCodeColor"
                                android:gravity="center" />

                            <EditText
                                android:id="@+id/schedTransferAddUpdAmtETId"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_border"
                                android:hint="amount"
                                android:inputType="numberDecimal"
                                android:paddingLeft="15dp"
                                android:textColor="@color/Black"
                                android:textSize="20sp"
                                android:textStyle="italic" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transferIndicator"
                        android:paddingLeft="10dp"
                        android:text="Accounts"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <Spinner
                            android:id="@+id/schedTransferAddUpdAccFromSpnId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="to"
                            android:textColor="@color/SteelBlue"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/schedTransferAddUpdAccToSpnId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transferIndicator"
                        android:paddingLeft="10dp"
                        android:text="Schedule"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/schedTransferSchedRadioGrpId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/schedTransferOnceAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:checked="true"
                                android:tag="ONCE"
                                android:text="Once"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTransferDailyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:tag="DAILY"
                                android:text="Daily"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTransferWeeklyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:tag="WEEKLY"
                                android:text="Weekly"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTransferMonthlyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:tag="MONTHLY"
                                android:text="Monthly"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTransferYearlyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:tag="YEARLY"
                                android:text="Yearly"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transferIndicator"
                        android:paddingLeft="10dp"
                        android:text="Auto Transfer"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/schedTransferAutoRadioGrpId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/schedTransferAutoAddRadioId"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:checked="true"
                                android:tag="AUTO_ADD"
                                android:text="Auto Add"
                                android:textColor="@color/finappleTheme"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/schedTransferAutoAddNotifyRadioId"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:tag="NOTIFY_ADD"
                                android:text="Notify &amp; Add"
                                android:textColor="@color/finappleTheme"
                                android:textSize="18sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transferIndicator"
                        android:paddingLeft="10dp"
                        android:text="Note"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/schTranAddUpdNoteETId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="notes"
                            android:inputType="textCapWords|textMultiLine"
                            android:maxLength="50"
                            android:paddingLeft="15dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/transctionActionButtons"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addUpdatePageSVId"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addUpdateDoneTVId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/oval_buttons_text_view"
                android:gravity="center"
                android:onClick="onDoneUpdate"
                android:text="DONE"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addUpdateDoneNewTVId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/oval_buttons_text_view"
                android:gravity="center"
                android:onClick="onDonePlusNew"
                android:text="DONE + NEW"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>