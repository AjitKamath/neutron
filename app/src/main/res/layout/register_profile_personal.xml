<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/profilePersonalRLId"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/profilePersonalHeaderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Profile - Personal"
                android:textColor="@color/finappleTheme"
                android:background="@color/white"
                android:textStyle="italic"
                android:textSize="30sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/profilePersonalHeaderId"
        android:id="@+id/profilePersonalStepsOrbsLLId">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/finished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/finished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilePersonalContentLLId"
        android:layout_width="fill_parent"
        android:layout_height="475dp"
        android:layout_below="@+id/profilePersonalStepsOrbsLLId"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/finappleThemeDark"
                android:text="Name"/>

            <EditText
                android:id="@+id/profilePersonalNameETId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="full name"
                android:text="Ajit"
                android:inputType="textCapWords"
                android:maxLength="25"
                android:background="@drawable/edit_text_border"
                android:maxLines="1"
                android:textColor="@color/Black"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/finappleThemeDark"
                android:text="Birthday"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="showDatePicker"
                android:background="@drawable/scheduled_grey"/>

            <TextView
                android:id="@+id/profilePersonalDobTVId"
                android:layout_width="155dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="showDatePicker"
                android:textColor="@color/orrange"
                android:text="1 Jan '90"/>



        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/finappleThemeDark"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Country"/>

            <Spinner
                android:id="@+id/profilePersonalCntrySpnId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/finappleThemeDark"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Currency"/>

            <Spinner
                android:id="@+id/profilePersonalCurSpnId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/finappleThemeDark"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Employed"/>

            <RadioGroup
                android:gravity="center"
                android:id="@+id/profilePersonalEmplydRadioGrpId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/profilePersonalEmplydYesRadioId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:tag="YES"
                    android:text="Yes"
                    android:textColor="@color/finappleTheme"
                    android:textSize="25sp"/>

                <RadioButton
                    android:id="@+id/profilePersonalEmplydNoRadioId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="25dp"
                    android:checked="true"
                    android:tag="NO"
                    android:text="No"
                    android:textColor="@color/finappleTheme"
                    android:textSize="25sp"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profilePersonalContentLLId"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="goToRegisterProfileWorkOrContact"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/oval_buttons_text_view"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
