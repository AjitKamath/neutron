<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/profilePersonalRLId"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/profilePersonalHeaderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="@dimen/layout_header_elevation"
            android:background="@color/finappleTheme"
            android:orientation="vertical">

            <!--<ImageView
                android:id="@+id/addAccHeaderBackImgId"
                android:layout_width="@dimen/image_header_size"
                android:layout_height="@dimen/image_header_size"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back"
                android:onClick="onBackClick"
                android:tag="BACK" />-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beautiful"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_header_primary" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="designed to appeal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_header_secondary" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profilePersonalHeaderId"
        android:id="@+id/profilePersonalStepsOrbsLLId">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/finished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/finished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/unfinished_step"
            android:onClick="onBackClick"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilePersonalContentLLId"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/profilePersonalStepsOrbsLLId"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/finappleThemeDark"
                android:text="Name"/>

            <EditText
                android:id="@+id/profilePersonalNameETId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="full name"
                android:text="Ajit"
                android:inputType="textCapWords"
                android:maxLength="25"
                android:background="@drawable/edit_text_border"
                android:maxLines="1"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/finappleThemeDark"
                android:text="Birthday"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:onClick="showDatePicker"
                android:background="@drawable/scheduled_grey"/>

            <TextView
                android:id="@+id/profilePersonalDobTVId"
                android:layout_width="155dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:onClick="showDatePicker"
                android:textColor="@color/orrange"
                android:text="1 Jan '90"/>



        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/finappleThemeDark"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Country"/>

            <Spinner
                android:id="@+id/profilePersonalCntrySpnId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/finappleThemeDark"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Currency"/>

            <Spinner
                android:id="@+id/profilePersonalCurSpnId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/finappleThemeDark"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Employed"/>

            <RadioGroup
                android:gravity="center"
                android:id="@+id/profilePersonalEmplydRadioGrpId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/profilePersonalEmplydYesRadioId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:tag="YES"
                    android:text="Yes"
                    android:textColor="@color/finappleTheme"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/profilePersonalEmplydNoRadioId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:tag="NO"
                    android:text="No"
                    android:textColor="@color/finappleTheme"
                    android:textSize="25sp"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profilePersonalContentLLId"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="right"
            android:onClick="goToRegisterProfileWorkOrContact"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/oval_buttons_text_view"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="NEXT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
