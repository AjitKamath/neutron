<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/loginRLId"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/loginHeaderId"
        android:layout_width="fill_parent"
        android:background="@color/finappleTheme"
        android:layout_height="wrap_content"
        android:elevation="@dimen/layout_header_elevation"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ಫಿ"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finappl"
                android:textColor="@color/white"
                android:textSize="@dimen/text_header_primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="simple . beautiful . precise"
                android:textColor="@color/white"
                android:textSize="@dimen/text_header_secondary" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/loginContentLLId"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/loginHeaderId"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginUsernameETId"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:hint="username"
            android:inputType="text"
            android:maxLength="25"
            android:background="@drawable/edit_text_border"
            android:maxLines="1"
            android:textColor="@color/Black"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/loginPasswordETId"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:hint="password"
            android:inputType="textPassword"
            android:maxLength="25"
            android:background="@drawable/edit_text_border"
            android:maxLines="1"
            android:textColor="@color/Black"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Forgot Password ?"
            android:textColor="@color/finappleThemeDark"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loginContentLLId"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="authenticateUser"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/oval_buttons_text_view"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:clickable="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:onClick="toRegisterUserPage"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/oval_buttons_text_view"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="REGISTER"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
