<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginRLId"
    android:layout_width="@dimen/screen_full_width"
    android:layout_height="@dimen/screen_full_height"
    android:layout_gravity="center"
    android:background="@drawable/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/discardIVId"
                android:layout_width="@dimen/image_header_size"
                android:layout_height="@dimen/image_header_size"
                android:background="@drawable/back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/screenJobTVId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-30dp"
                android:gravity="right|center"
                android:paddingRight="30dp"
                android:text="LOGIN"
                android:textColor="@color/formTextLight"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/loginLLId"
                    android:layout_width="@dimen/screen_full_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_form_height"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/divider_margin"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="USERNAME"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="10sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/loginUsernameETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLength="@integer/input_max_count_small"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="ajitkamath47"
                                    android:textColor="@color/formTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/divider_margin"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PASSWORD"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="10sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/loginPasswordETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="textPassword"
                                    android:maxLength="@integer/input_max_count_small"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="newton"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/divider_margin"
                                android:gravity="center_vertical|right"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="forgot password?"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/loginButtonLLId"
                            android:layout_width="@dimen/screen_half_width"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="LOGIN"
                                android:textColor="@color/formHeadingTextLight"
                                android:textSize="@dimen/login_form_button_text_size" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height"
                            android:layout_height="15dp"
                            android:background="@color/formTextLight" />

                        <LinearLayout
                            android:id="@+id/registerLLId"
                            android:layout_width="@dimen/screen_half_width"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="REGISTER"
                                android:textColor="@color/formHeadingTextLight"
                                android:textSize="@dimen/login_form_button_text_size" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/simpleLLId"
                    android:layout_width="@dimen/screen_full_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_form_height"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="USERNAME"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="@dimen/text_form_header_size" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/registerUserIdETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLength="@integer/input_max_count_small"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="ajitkamath47"
                                    android:textColor="@color/formTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/divider_margin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NAME"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="@dimen/text_form_header_size" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/registerNameETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="textCapWords"
                                    android:maxLength="@integer/input_max_count_small"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="Ajit Kamath"
                                    android:textColor="@color/formTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="@dimen/divider_margin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PASSWORD"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="@dimen/text_form_header_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/registerPassETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="textPassword"
                                    android:maxLength="@integer/input_max_count_small"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="Newton"
                                    android:textColor="@color/formTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="@dimen/divider_margin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="REPEAT PASSWORD"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="@dimen/text_form_header_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/registerRepeatPassETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="textPassword"
                                    android:maxLength="@integer/input_max_count_small"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="Newton"
                                    android:textColor="@color/formTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/divider_margin"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="COUNTRY"
                                        android:textColor="@color/formHeadingTextLight"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Spinner
                                        android:layout_gravity="center"
                                        android:id="@+id/registerCountrySpnId"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/text_form_text_height"
                                        android:backgroundTint="@color/white"
                                        android:spinnerMode="dropdown" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/divider_margin"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="BIRTHDAY"
                                        android:textColor="@color/formHeadingTextLight"
                                        android:textSize="@dimen/text_form_header_size" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/input_indicator_image_size"
                                        android:layout_height="@dimen/input_indicator_image_size"
                                        android:layout_marginRight="2dp"
                                        android:background="@drawable/calendar_white" />

                                    <TextView
                                        android:id="@+id/registerDobTVId"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/text_form_text_height"
                                        android:gravity="center"
                                        android:hint="17 Jul 1990"
                                        android:inputType="textCapWords"
                                        android:text="17 Jul 1990"
                                        android:textColor="@color/formTextLight"
                                        android:textColorHint="@color/formHintTextDark"
                                        android:textSize="15sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MOBILE"
                                        android:textColor="@color/formHeadingTextLight"
                                        android:textSize="10sp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/registerCountryCodeTVId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/text_form_text_height"
                                        android:layout_marginRight="2dp"
                                        android:gravity="center"
                                        android:text="+00"
                                        android:textColor="@color/formTextLight"
                                        android:textSize="15sp" />

                                    <EditText
                                        android:id="@+id/registerPhoneETId"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/text_form_text_height"
                                        android:background="@drawable/edit_text_border_transparent"
                                        android:gravity="center"
                                        android:inputType="phone|number"
                                        android:maxLength="12"
                                        android:text="9884463437"
                                        android:textColor="@color/formTextLight"
                                        android:textSize="15sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/divider_margin"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="E-MAIL"
                                    android:textColor="@color/formHeadingTextLight"
                                    android:textSize="10sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/input_indicator_image_size"
                                    android:layout_height="@dimen/input_indicator_image_size"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_white" />

                                <EditText
                                    android:id="@+id/registerEmailETId"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_form_text_height"
                                    android:layout_marginLeft="@dimen/input_indicator_image_size_negative"
                                    android:background="@drawable/edit_text_border_transparent"
                                    android:gravity="center"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="@integer/input_max_count_big"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="ajit@finappl.com"
                                    android:textColor="@color/formTextLight"
                                    android:textSize="@dimen/text_form_text_size" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/register1NextLLId"
                            android:layout_width="@dimen/screen_half_width"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="OK, LET'S START"
                                android:textColor="@color/formTextLight"
                                android:textSize="@dimen/login_form_button_text_size" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
