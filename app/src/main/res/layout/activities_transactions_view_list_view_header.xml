<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/viewTranHeaderLLId"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/cardBackground">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:background="@color/transactionIndicator"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewTranHeaderDateId"
            android:layout_marginLeft="2dp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="1st April '15"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewTransactTileCurIVId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="INR"
                android:textSize="16sp"
                android:textColor="@color/finappleCurrencyCodeColorLight"
                android:gravity="center" />

            <TextView
                android:id="@+id/viewTransactTileDayTotalTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-999.99M"
                android:textSize="16dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approx"
                android:textSize="15sp"
                android:textColor="@color/white"/>

        </LinearLayout>



        <TextView
            android:id="@+id/viewTransactTileDayCountTVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_counter_white_text_view"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:maxLength="2"
            android:text="99"
            android:textColor="@color/finappleTheme"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>