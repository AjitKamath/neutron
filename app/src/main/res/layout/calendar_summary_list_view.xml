<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/consolSummaryLLId"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="bottom|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/consolTranTypTVId"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_calendar_transaction_indicator"
                    android:gravity="center"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/consolTranCatTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:gravity="bottom|left"
                    android:maxLength="15"
                    android:paddingLeft="5dp"
                    android:text="MMMMMMMMM"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/consolTrfrLLId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/consolTrfrFrmAccTVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|left"
                        android:maxLength="15"
                        android:maxWidth="80dp"
                        android:paddingLeft="5dp"
                        android:text="MMMMMMM"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/arrow_blue" />

                    <TextView
                        android:id="@+id/consolTrfrToAccTVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|left"
                        android:maxLength="15"
                        android:maxWidth="80dp"
                        android:text="MMMMMMM"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/consolTranCatCountTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="top"
                    android:maxLength="4"
                    android:text="x 99"
                    android:textColor="@color/DarkGreen"
                    android:textSize="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/consolTranValLLId"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/consolTranCurTVId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="INR"
                android:textSize="16sp"
                android:textColor="@color/finappleCurrencyCodeColor"
                android:gravity="center" />

            <TextView
                android:id="@+id/consolTranCatTotalTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:maxLength="8"
                android:text="-999.99K"
                android:textColor="@color/finappleCurrencyNegColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cconsolTranApprxTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="1"
                android:text="@string/approx"
                android:textColor="@color/finappleCurrencyApproxColor"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
