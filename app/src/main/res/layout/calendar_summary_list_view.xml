<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/consolTranLLId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/consolTranTypTVId"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_calendar_transaction_indicator"
        android:gravity="center"
        android:maxLength="1"
        android:text="E"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/consolTranCatTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:paddingLeft="2dp"
            android:maxLength="15"
            android:gravity="bottom|left"
            android:text="MMMMMMMMM"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/consolTranCatCountTVId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="top"
            android:maxLength="4"
            android:text="x 99"
            android:textColor="@color/DarkGreen"
            android:textSize="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/consolTranValLLId"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <!--<View
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:background="@color/finappleTheme" />-->

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/consolTranCurTVId"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/india"
            android:gravity="center"/>

        <TextView
            android:id="@+id/consolTranCatTotalTVId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:maxLength="8"
            android:text="-999.99K"
            android:textColor="@color/finappleCurrencyNegColor"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/cconsolTranApprxTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="1"
            android:text="@string/approx"
            android:textColor="@color/finappleCurrencyApproxColor"
            android:textSize="10dp"/>
    </LinearLayout>
</LinearLayout>
