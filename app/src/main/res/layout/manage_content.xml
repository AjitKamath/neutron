<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manageContentRLId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/manageContentHeaderLLId"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_header_size"
        android:background="@color/finappleTheme"
        android:elevation="@dimen/layout_header_elevation"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_header_size"
            android:layout_height="@dimen/image_header_size"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back"
            android:onClick="onBackClick" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Manage Content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_header_title_size" />

        <ImageView
            android:layout_width="@dimen/image_header_size"
            android:layout_height="@dimen/image_header_size"
            android:layout_marginRight="5dp"
            android:onClick="onAddClick"
            android:src="@drawable/add_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/manageContentTabsLLId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageContentHeaderLLId"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_activities_tab_outer"
                android:padding="0.5dp">

                <TextView
                    android:id="@+id/manageContentCatTabTVId"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/view_activities_active_tab_inner"
                    android:gravity="center"
                    android:onClick="onTabClick"
                    android:tag="SELECTED"
                    android:text="CATEGORIES"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_tab_small_size" />

            </LinearLayout>


            <TextView
                android:id="@+id/manageContentCatTabCounterTVId"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/circle_category_text_view"
                android:gravity="center"
                android:maxLength="2"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/text_bubble_counter_small_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_activities_tab_outer"
                android:padding="0.5dp">

                <TextView
                    android:id="@+id/manageContentAccTabTVId"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/view_activities_inactive_tab_inner"
                    android:gravity="center"
                    android:onClick="onTabClick"
                    android:text="ACCOUNTS"
                    android:textColor="@color/finappleTheme"
                    android:textSize="@dimen/text_tab_small_size" />

            </LinearLayout>


            <TextView
                android:id="@+id/manageContentAccTabCounterTVId"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/circle_account_text_view"
                android:gravity="center"
                android:maxLength="2"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/text_bubble_counter_small_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_activities_tab_outer"
                android:padding="0.5dp">

                <TextView
                    android:id="@+id/manageContentSpntOnTabTVId"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/view_activities_inactive_tab_inner"
                    android:gravity="center"
                    android:onClick="onTabClick"
                    android:text="SPENT ON's"
                    android:textColor="@color/finappleTheme"
                    android:textSize="@dimen/text_tab_small_size" />

            </LinearLayout>


            <TextView
                android:id="@+id/manageContentSpntOnTabCounterTVId"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/circle_spenton_text_view"
                android:gravity="center"
                android:maxLength="2"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/text_bubble_counter_small_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/manageContentTabsLLId"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">


        <LinearLayout
            android:id="@+id/manageContentCatLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/manageContentCatLVId"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:choiceMode="singleChoice"
                    android:divider="@null" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manageContentAccLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/manageContentAccLVId"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:choiceMode="singleChoice"
                    android:divider="@null" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/manageContentSpntOnLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/manageContentSpntOnLVId"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:choiceMode="singleChoice"
                    android:divider="@null"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>