<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/day_summary_transfers_list_item_cv"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:id="@+id/day_summary_transfers_list_item_edit_iv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/write_grey"/>

            <ImageView
                android:id="@+id/day_summary_transfers_list_item_delete_iv"
                android:layout_marginLeft="2dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/cross_grey"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/day_summary_transfers_list_item_account_from_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/credit_card" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_summary_transfers_list_item_account_from_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREDIT CARD"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="TRNFR TO"
                android:textColor="@color/finappleTheme"
                android:textSize="8sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/day_summary_transfers_list_item_account_to_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/debit_card" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_summary_transfers_list_item_account_to_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="DEBIT CARD"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_summary_transfers_list_item_amt_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 22,22,340"
                        android:textColor="@color/finappleCurrencyNeutralColor"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/day_summary_transfers_list_item_notes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
                android:textColor="@color/tertiaryText"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_summary_transfers_list_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:text="2:43 AM"
                android:textColor="@color/tertiaryText"
                android:textSize="8sp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>