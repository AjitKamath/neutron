<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsNotifsPopperLLId"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:elevation="15dp"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_header_size"
            android:background="@color/finappleTheme"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_header_title_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TimePicker
                    android:id="@+id/settingsNotifsPopperTimeTPId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/FinappleTheme"
                    android:timePickerMode="clock"
                    />


                <!--<TextView
                    android:id="@+id/settingsNotifsPopperTimeTVId"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="10:00"
                    android:textColorHint="@color/orrange"
                    android:inputType="time"
                    android:textColor="@color/orrange"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/settingsNotifsPopperHourTVId"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_height="fill_parent"
                    android:hint="AM"
                    android:paddingTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@color/orrange"
                    android:inputType="time"
                    android:textColor="@color/orrange"
                    android:textSize="15sp" />
-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/settingsNotifsPopperVibeLLId"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settingsNotifsPopperVibeTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="Vibrate"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_tick_outer"
                    android:padding="0.5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:background="@drawable/circle_tick_inner">

                        <LinearLayout
                            android:id="@+id/settingsNotifsPopperBuzzTickLLId"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="2dp"
                            android:background="@drawable/circle_tick_super_inner_unchecked">

                            <ImageView
                                android:id="@+id/settingsNotifsPopperBuzzTickIVId"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/tick_grey"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settingsNotifsPopperSaveTVId"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_buttons_text_view"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>