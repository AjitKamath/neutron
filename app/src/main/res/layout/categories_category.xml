<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryLLId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/categoryIVId"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shopping" />

    <TextView
        android:id="@+id/categoryTVId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="SHOPPING"
        android:textColor="@color/formSpinnerDark"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">

        <ImageView
            android:id="@+id/categoryDeleteIVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="MODIFY"
            android:background="@drawable/delete_small_grey" />

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:id="@+id/categoryModifyIVId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="MODIFY"
            android:background="@drawable/write_grey" />

    </LinearLayout>

</LinearLayout>