<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_summary_transactions_list_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/calendar_summary_transactions_list_item_cat_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/shopping" />

        <TextView
            android:id="@+id/calendar_summary_transactions_list_item_name_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLength="25"
            android:text="DIWALI GIFTS "
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/calendar_summary_transactions_list_item_amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="right|center"
            android:maxLength="25"
            android:text="â‚¹ 2,450"
            android:textColor="@color/finappleCurrencyNegColor"
            android:textSize="10sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/calendar_summary_transactions_list_item_cat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOPPING"
            android:textColor="@color/tertiaryText"
            android:textSize="8sp" />

        <View
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/calendar_summary_transactions_list_item_cat_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/calendar_summary_transactions_list_item_divider"
            android:layout_width="@dimen/divider_height"
            android:layout_height="8dp"
            android:background="@color/divider"/>

        <TextView
            android:layout_toEndOf="@id/calendar_summary_transactions_list_item_divider"
            android:id="@+id/calendar_summary_transactions_list_item_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREDIT CARD"
            android:gravity="center"
            android:textColor="@color/tertiaryText"
            android:textSize="8sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/calendar_summary_transactions_list_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:43 AM"
            android:gravity="right"
            android:textColor="@color/tertiaryText"
            android:textSize="8sp" />
    </RelativeLayout>

</LinearLayout>
