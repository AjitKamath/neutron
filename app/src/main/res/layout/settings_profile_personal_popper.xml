<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/card_background_selector"
    android:layout_gravity="center"
    android:id="@+id/settingsProfilePersonalPoprLLId"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Profile - Personal"
                android:background="@color/finappleTheme"
                android:textSize="20sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="22sp"
                    android:textColor="@color/finappleThemeDark"/>

                <EditText
                    android:id="@+id/settingsProfilePersonalPoprNameETId"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="full name"
                    android:inputType="textCapWords"
                    android:maxLength="25"
                    android:background="@drawable/edit_text_border"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:textColor="@color/Black"
                    android:textSize="22sp"
                    android:textStyle="italic">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textSize="22sp"
                    android:textColor="@color/finappleThemeDark"/>

                <TextView
                    android:id="@+id/settingsProfilePersonalPoprDobTVId"
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:text="12 September '00" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textSize="22sp"
                    android:textColor="@color/finappleThemeDark"/>

                <Spinner
                    android:id="@+id/settingsProfilePersonalPoprCntrySpnId"
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Currency"
                    android:textSize="22sp"
                    android:textColor="@color/finappleThemeDark"/>

                <Spinner
                    android:id="@+id/settingsProfilePersonalPoprCurSpnId"
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Updated"
                    android:textSize="12sp"
                    android:textColor="@color/tertiaryText"/>

                <TextView
                    android:id="@+id/settingsProfilePersonalPoprLastUpdTVId"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="31 September '15"
                    android:textSize="12sp"
                    android:textColor="@color/finappleCurrencyPosColor"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsProfilePersonalPoprSaveLLId"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/view_activities_tab_outer"
                android:text="SAVE"
                android:textSize="18sp"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>