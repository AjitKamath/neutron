<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedTranAddUpdRLId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/cardBackground"
    android:gravity="right"
    android:orientation="vertical"
    tools:context=".ExpensePageView">

    <!-- header -->

    <LinearLayout
        android:elevation="@dimen/layout_header_elevation"
        android:id="@+id/schedTranAddUpdHeaderLLId"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_header_size"
        android:background="@color/finappleTheme"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/schedTranAddUpdBackImgId"
            android:layout_width="@dimen/image_header_size"
            android:layout_height="@dimen/image_header_size"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back"
            android:onClick="showMessagePopper"
            android:tag="BACK" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Scheduled Transaction"
            android:textColor="@color/white"
            android:textSize="@dimen/text_header_title_size" />

        <TextView
            android:id="@+id/schedTranAddUpdDateTVId"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="99 Sep '15"
            android:onClick="showDatePicker"
            android:textColor="@color/white"
            android:textSize="@dimen/text_header_title_size" />

    </LinearLayout>

    <!--Page-->
    <ScrollView
        android:id="@+id/addUpdatePageSVId"
        android:layout_width="fill_parent"
        android:layout_height="490dp"
        android:layout_below="@+id/schedTranAddUpdHeaderLLId">

        <LinearLayout
            android:id="@+id/schedTranAddUpdPageLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/basicLLId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingLeft="10dp"
                        android:background="@color/finappleTheme"
                        android:id="@+id/schedTranAddUpdTVId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Transaction"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/schedTranAddUpdNameETId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="title"
                            android:inputType="textCapWords"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:textColor="@color/Black"
                            android:textSize="20sp"
                            android:textStyle="italic"></EditText>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/india"
                                android:gravity="center" />

                            <EditText

                                android:id="@+id/schedTranAddUpdAmtETId"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_border"
                                android:hint="amount"
                                android:inputType="numberDecimal"
                                android:paddingLeft="15dp"
                                android:textColor="@color/Black"
                                android:textSize="20sp"
                                android:textStyle="italic" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/finappleTheme"
                        android:text="Category, Account &amp; Spent On"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <Spinner
                            android:id="@+id/schedTranAddUpdCatSpnId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:spinnerMode="dialog"
                            android:layout_gravity="center" />

                        <Spinner
                            android:id="@+id/schedTranAddUpdAccSpnId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:spinnerMode="dialog"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp" />

                        <Spinner
                            android:id="@+id/schedTranAddUpdSpntOnSpnId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:spinnerMode="dialog"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/schedTranAddUpdTypeHeaderTVId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/finappleTheme"
                        android:text="Transaction Type"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/schedTranAddUpdExpIncRadioGrpId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/schedTranAddUpdExpRadioId"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:checked="true"
                                android:tag="EXPENSE"
                                android:text="Expense"
                                android:textColor="@color/finappleTheme"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/schedTranAddUpdIncRadioId"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:tag="INCOME"
                                android:text="Income"
                                android:textColor="@color/finappleTheme"
                                android:textSize="18sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="fill_parent"
                        android:background="@color/finappleTheme"
                        android:layout_height="wrap_content"
                        android:text="Schedule"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/schedTranSchedRadioGrpId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/schedTranOnceAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:checked="true"
                                android:tag="ONCE"
                                android:text="Once"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTranDailyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:tag="DAILY"
                                android:text="Daily"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTranWeeklyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:tag="WEEKLY"
                                android:text="Weekly"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTranMonthlyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:tag="MONTHLY"
                                android:text="Monthly"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/schedTranYearlyAddRadioId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:tag="YEARLY"
                                android:text="Yearly"
                                android:textColor="@color/finappleTheme"
                                android:textSize="13sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Auto Transaction"
                        android:background="@color/finappleTheme"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/schedTranAutoRadioGrpId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/schedTranAutoAddRadioId"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:checked="true"
                                android:tag="AUTO_ADD"
                                android:text="Auto Add"
                                android:textColor="@color/finappleTheme"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/schedTranAutoAddNotifyRadioId"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:tag="NOTIFY_ADD"
                                android:text="Notify &amp; Add"
                                android:textColor="@color/finappleTheme"
                                android:textSize="18sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="0.5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:background="@color/finappleTheme"
                        android:text="Note"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/schTranAddUpdNoteETId"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="notes"
                            android:inputType="textCapWords|textMultiLine"
                            android:maxLength="50"
                            android:paddingLeft="15dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/transctionActionButtons"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addUpdatePageSVId"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addUpdateDoneTVId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="DONE"
                android:onClick="onDoneUpdate"
                android:background="@drawable/oval_buttons_text_view"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addUpdateDoneNewTVId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/oval_buttons_text_view"
                android:text="DONE + NEW"
                android:onClick="onDonePlusNew"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_button_big_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>