<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addUpdateSpentonRLId"
    android:layout_width="@dimen/fragment_full_width"
    android:layout_height="@dimen/fragment_full_height"
    android:layout_gravity="center"
    android:layout_margin="@dimen/screen_components_padding_from_walls"
    android:gravity="right"
    android:orientation="vertical"
    app:theme="@style/AppTheme">

    <!-- header -->

    <LinearLayout
        android:id="@+id/addUpdateSpentonHeaderLLId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/finappleTheme"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/screen_components_padding_from_walls"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/addUpdateSpentonHeaderCloseIVId"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/cross_white_small"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPENT ON"
                android:gravity="center"
                android:textColor="@drawable/textview_touch_light"
                android:textSize="12sp" />

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/addUpdateSpentonHeaderSaveIVId"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/tick_white_small"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addUpdateSpentonIVId"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/myself"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TITLE"
                        android:textColor="@color/formHeadingTextLight"
                        android:textSize="@dimen/text_form_header_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/edit_text_border_light"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/input_indicator_image_size"
                        android:layout_height="@dimen/input_indicator_image_size"
                        android:src="@drawable/write_white" />

                    <EditText
                        android:id="@+id/addUpdateSpentonNameETId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_border_light"
                        android:gravity="center"
                        android:inputType="textCapCharacters"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--Page-->
    <ScrollView
        android:id="@+id/addUpdatePageSVId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addUpdateSpentonHeaderLLId"
        android:background="@color/finappleBackground">

        <LinearLayout
            android:id="@+id/addUpdateSpentonPageLLId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/screen_components_padding_from_walls"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TAGS"
                            android:textColor="@color/formHeadingTextDark"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/input_indicator_image_size"
                            android:layout_height="@dimen/input_indicator_image_size"
                            android:src="@drawable/write_grey" />

                        <EditText
                            android:id="@+id/addUpdateSpentonTagsETId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edit_text_border"
                            android:gravity="center"
                            android:inputType="textCapCharacters"
                            android:paddingRight="40dp"
                            android:textColor="@color/tertiaryText"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/addUpdateSpentonTagsTVId"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ADD"
                            android:layout_marginLeft="-40dp"
                            android:textColor="@color/tertiaryText"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/tertiaryText"
                        android:text="EXAMPLE: DINNER, GYM, LAUNDRY .."/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/addUpdateSpentonNoTagsTVId"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tertiaryText"
                android:text="- NO TAGS YET -"/>

            <GridView
                tools:listitem="@layout/tag"
                android:numColumns="2"
                android:padding="@dimen/screen_components_padding_from_walls"
                android:id="@+id/addUpdateSpentonTagsGVId"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>