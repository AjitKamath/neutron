<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addAccRLId"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/addAccLLId"
        android:layout_width="fill_parent"
        android:layout_height="526dp"
        android:orientation="vertical">

        <!--header-->
        <LinearLayout
            android:id="@+id/addAccHeaderLLId"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/twitterBlue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addAccHeaderBackImgId"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:tag="BACK"
                android:background="@drawable/back"
                android:onClick="onBackClick"/>

            <TextView
                android:id="@+id/addAccLabelTVId"
                android:layout_width="290dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Account"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:tag="fake"/>

        </LinearLayout>

        <!--page-->
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/finappleTheme"
                android:orientation="vertical"
                android:padding="0.5dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Account"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/addAccAccNameETId"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:hint="title"
                        android:inputType="textCapWords|text"
                        android:maxLength="25"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DarkGray"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/finappleTheme"
                android:orientation="vertical"
                android:padding="0.5dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Initial Deposit"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/addAccInitAmtETId"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:hint="amount"
                        android:inputType="numberDecimal"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DarkGray"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/finappleTheme"
                android:orientation="vertical"
                android:padding="0.5dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Notes"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/addAccNoteETId"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:hint="notes"
                        android:inputType="textCapWords|textMultiLine"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DarkGray"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/addAccLLId"
        android:background="@color/twitterBlue"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/addAccDoneLLId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/default_button"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="onDoneUpdate"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/done"/>

            <TextView
                android:id="@+id/addAccDoneTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>