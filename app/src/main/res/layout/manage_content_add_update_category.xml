<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addCatRLId"
                android:background="@color/cardBackground">

    <LinearLayout
        android:id="@+id/addCatLLId"
        android:layout_width="fill_parent"
        android:layout_height="530dp"
        android:orientation="vertical">

        <!--header-->
        <LinearLayout
            android:id="@+id/addCatHeaderLLId"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@color/twitterBlue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addCatHeaderBackImgId"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/back"
                android:tag="BACK"
                android:onClick="onBackClick"/>

            <TextView
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/headerText"
                android:gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <!--page-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/finappleTheme"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Category"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background_selector"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/addCatCatNameETId"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:hint="title"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DarkGray"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>


            <!-- Transaction type -->
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/finappleTheme"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Category Type"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background_selector"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RadioGroup
                        android:id="@+id/addCatTranTypeRGId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/addCatTranExpRBId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:checked="true"
                            android:tag="EXPENSE"
                            android:text="Expense"
                            android:textColor="@color/SteelBlue"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/addCatTranIncRBId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:tag="INCOME"
                            android:text="Income"
                            android:textColor="@color/SteelBlue"
                            android:textSize="20sp"/>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/finappleTheme"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Notes"
                    android:textColor="@color/headerText"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background_selector"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/addCatNoteNameETId"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:hint="notes"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DarkGray"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/finappleTheme"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text="Tags"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background_selector"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/addCatTagETId"
                            android:layout_width="310dp"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="add tags"
                            android:maxLength="20"
                            android:paddingLeft="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/DarkGray"
                            android:textStyle="italic"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:onClick="addNewCatTag"
                            android:src="@drawable/add_expense_blue"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addCatNoTagsLabelTVId"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-no tags yet-"
                            android:textColor="@color/DarkGray"/>

                        <ListView
                            android:id="@+id/addCatTagsLVId"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addCatLLId"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/addCatDoneLLId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_activities_tab_outer">

            <TextView
                android:id="@+id/addCatDoneTVId"
                android:onClick="onDoneUpdate"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:background="@drawable/view_activities_active_tab_inner"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>