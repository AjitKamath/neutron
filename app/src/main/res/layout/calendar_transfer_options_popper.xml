<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:id="@+id/calendarTransfersPopperLLId"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="2dp"
        android:background="@drawable/oval_buttons_text_view"
        android:id="@+id/transferPopperNewTVId"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="New"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:background="@drawable/oval_buttons_text_view"
        android:id="@+id/transferPopperQuickTVId"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Quick"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:background="@drawable/oval_buttons_text_view"
        android:id="@+id/transferPopperSchedTVId"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Schedule"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"/>
</LinearLayout>