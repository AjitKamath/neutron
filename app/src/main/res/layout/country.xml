<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countryLLId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/screen_components_padding_from_walls">

    <!-- header -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/countrySelectedVId"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/capsule_vertical_selected_view" />

        <ImageView
            android:id="@+id/countryIVId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/india" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countryTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="INDIA"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/countryCodeTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="+91"
                android:textColor="@color/formSpinnerDark"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countryCurrencyTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="RUPEE"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/countryCurrencyCodeTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="INR"
                android:textColor="@color/formSpinnerDark"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>