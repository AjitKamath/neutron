<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/budgetsViewListContentLLId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/budgetsViewListBubbleTVId"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:background="@drawable/circle_budgets_account_text_view"/>

                <TextView
                    android:id="@+id/budgetsViewListNameTVId"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:layout_marginLeft="2dp"
                    android:maxLength="25"
                    android:text="MMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/india"/>

                <TextView
                    android:id="@+id/budgetsViewListAmtTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:maxLength="7"
                    android:text="999.99M"
                    android:textColor="@color/finappleCurrencyPosColor"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:maxLength="1"
                    android:text="+"
                    android:textColor="@color/tertiaryText"
                    android:textSize="15sp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/budgetsViewListGroupNameTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical|left"
                android:maxLength="25"
                android:text="MMMMMMMMMMMMMMMMMMMM"
                android:textColor="@color/secondaryText"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/budgetsViewListNoteTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="13dp"
                android:maxLength="50"
                android:text="MMMMMMMMMMMMMMMMMMMM"
                android:textColor="@color/tertiaryText"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>