<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewTransferTileLLId"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardBackground"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_expense_text_view"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewTransferTileFrmAccTVId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLength="25"
                    android:text="MMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_income_text_view"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewTransferTileToAccTVId"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLength="25"
                    android:text="MMMMMMMMM"
                    android:textColor="@color/finappleThemeDark"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewTransferTileCurIVId"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/india" />

            <TextView
                android:id="@+id/viewTransferTileAmtTVId"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:maxLength="7"
                android:text="999.99M"
                android:textColor="@color/finappleCurrencyPosColor"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/viewTransferTileAmtApproxTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/approx"
                android:textColor="@color/finappleCurrencyApproxColor"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>