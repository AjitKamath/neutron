<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLLId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/screen_components_padding_from_walls"
    android:paddingRight="@dimen/screen_components_padding_from_walls"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/activityTransactionLLId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activityCategoryIVId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/shopping" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activityTransactionNameTVId"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:maxLength="25"
                    android:text="DIWALI GIFTS FOR FAMILY"
                    android:textColor="@color/black"
                    android:textSize="15sp" />4

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activityCurrencyCodeTVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="25"
                        android:text="INR"
                        android:textColor="@color/finappleCurrencyCodeColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/activityTransactionAmtTVId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:maxLength="25"
                        android:text="2,450"
                        android:textColor="@color/finappleCurrencyNegColor"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activityCategoryTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOPPING"
                    android:textColor="@color/tertiaryText"
                    android:textSize="10sp" />

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="@dimen/divider_height"
                    android:layout_height="match_parent"
                    android:background="@color/tertiaryText" />

                <TextView
                    android:id="@+id/activityAccountTVId"
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREDIT CARD"
                    android:textColor="@color/tertiaryText"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activityTransferLLId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activityTransferFromAccIVId"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/credit_card"/>

                <TextView
                    android:id="@+id/activityTransferFromAccTVId"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="CREDIT CARD"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_blue"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activityTransferCurrCodeTVId"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/finappleCurrencyCodeColor"
                        android:text="INR"/>
                    <TextView
                        android:id="@+id/activityTransferAmtTVId"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/positiveButtonColor"
                        android:text="2,340"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="125dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activityTransferToAccIVId"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/debit_card"/>

                <TextView
                    android:id="@+id/activityTransferToAccTVId"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="DEBIT CARD"/>

            </LinearLayout>

        </GridLayout>

    </LinearLayout>


</LinearLayout>
