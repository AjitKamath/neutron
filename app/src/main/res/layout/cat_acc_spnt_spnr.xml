<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white"
    android:id="@+id/spinnerLLId"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="left|center_vertical"
	android:orientation="horizontal">

    <View
        android:id="@+id/spinnerItemVId"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:background="@color/Orange" />

	<TextView
		android:id="@+id/spinnerItemTVId"
		android:layout_width="match_parent"
        android:gravity="center_vertical"
		android:layout_height="wrap_content"
        android:maxLength="@integer/cat_acc_spnt_max_count"
        android:text="XXXXXXXXXXXXXXX"
		android:textColor="@color/formSpinnerDark"
		android:textSize="@dimen/spinner_text_size" />

</LinearLayout>