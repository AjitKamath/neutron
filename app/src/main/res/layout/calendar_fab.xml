<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/calendarFabRLId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:clipChildren="false">

        <LinearLayout
            android:gravity="bottom|right"
            android:id="@+id/fab_containerLLId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:onClick="showTransactionPopper"
                android:visibility="visible"
                android:id="@+id/calendarFabTransactionLLId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/calendarActionsTransferLLId"
                android:layout_alignEnd="@+id/calendarFabIBId"
                android:layout_marginRight="160dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/calendarFabTransactionsDescriptionLLId"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRANSACTION"
                        android:textColor="@color/transactionIndicator"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add your Expense/Income"
                        android:textColor="@color/tertiaryText"
                        android:textSize="10sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ring_transaction"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/transaction_new_grey" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:onClick="showTransferPopper"
                android:visibility="visible"
                android:id="@+id/calendarFabTransferLLId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/calendarFabReportLLId"
                android:layout_alignEnd="@id/calendarFabIBId"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/calendarFabTransfersDescriptionLLId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRANSFER"
                        android:textColor="@color/transferIndicator"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer between your Accounts"
                        android:textColor="@color/tertiaryText"
                        android:textSize="10sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ring_transfer"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/transfer_new_grey" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/calendarFabReportLLId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/calendarFabIBId"
                android:layout_alignEnd="@id/calendarFabIBId"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/calendarFabReportsDescriptionLLId"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REPORTS"
                        android:textColor="@color/report"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track your Activities in detail"
                        android:textColor="@color/tertiaryText"
                        android:textSize="10sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ring_report"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/report_grey" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@id/calendarFabIBId"
                style="@style/FloatingActionButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:src="@drawable/plus_white_small" />
        </LinearLayout>

    </RelativeLayout>
</merge>