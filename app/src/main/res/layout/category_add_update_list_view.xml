<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/card_background_selector"
    android:id="@+id/spinnerLLId"
    android:gravity="left"
    android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginBottom="3dp">

    <View
        android:id="@+id/addCatTagListItemVId"
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:background="@color/Orange" />

	<TextView
		android:id="@+id/addCatTagListItemTVId"
		android:layout_width="260dp"
        android:gravity="center_vertical"
		android:layout_height="30dp"
        android:maxLength="20"
        android:text="XXXXXXXXXXXXXXXxxxxx"
		android:paddingLeft="3dp"
		android:textColor="@color/black"
		android:textSize="20dp" />

    <ImageView
        android:id="@+id/addCatDelTagListItemIVId"
        android:src="@drawable/delete_small_grey"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:onClick="remOldCatTag"/>

</LinearLayout>