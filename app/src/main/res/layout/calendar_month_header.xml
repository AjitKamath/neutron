<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_month_header"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/radial_gradient_grey_small"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/calendar_month_header_prev_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/left_arrow"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/radial_gradient_grey"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/calendar_month_header_month_month_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/calendar_month_header_month_year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/radial_gradient_grey_small"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/calendar_month_header_next_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/right_arrow"/>


    </LinearLayout>

</LinearLayout>