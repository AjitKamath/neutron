<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/calendarSettingsPopperLLId"
    android:background="@color/white"
    android:elevation="15dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/settingsPopperLLId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/settingsPopperSettingsLLId"
            android:layout_width="fill_parent"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:onClick="onSettingsClick"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/settings"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/settingsPopperSettingsTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Settings"
                android:textColor="@color/twitterBlue"
                android:textSize="35dp"/>

        </LinearLayout>

        <TextView
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="configure finapple the way you want.."
            android:textColor="@color/greyDays"
            android:textSize="10dp"/>

        <View
            android:layout_width="255dp"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray"/>


        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/settingsPopperShareLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/share"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/settingsPopperShareTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Share"
                android:textColor="@color/twitterBlue"
                android:textSize="35dp"/>

        </LinearLayout>

        <TextView
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="the app, the love &amp; much more.."
            android:textColor="@color/greyDays"
            android:textSize="10dp"/>

        <View
            android:layout_width="255dp"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/settingsPopperRateLLId"
            android:layout_width="fill_parent"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rate"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/settingsPopperRateTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Rate finapple"
                android:textColor="@color/twitterBlue"
                android:textSize="35dp"/>

        </LinearLayout>
        <TextView
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="come on, we deserve it.."
            android:textColor="@color/greyDays"
            android:textSize="10dp"/>

        <View
            android:layout_marginTop="2dp"
            android:layout_width="255dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/settingsPopperAboutLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/team_black"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/settingsPopperAboutTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="The Team"
                android:textColor="@color/twitterBlue"
                android:textSize="35dp"/>

        </LinearLayout>
        <TextView
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="bunch of Indian super heroes.."
            android:textColor="@color/greyDays"
            android:textSize="10dp"/>
    </LinearLayout>
</LinearLayout>