<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/card_background_selector"
    android:id="@+id/msgPoprSchedLLId"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msgPoprSchedMsgTVId"
                android:textColor="@color/finappleTheme"
                android:textSize="12dp"
                android:text="You can either Delete this Transaction or remove all the Schedules ahead"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msgPoprSchedNegLLId">

                <TextView
                    android:id="@+id/msgPoprSchedNegTVId"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/negative_capsule_outer"
                    android:gravity="center"
                    android:text="DELETE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_tab_small_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msgPoprSchedSuperNegLLId">

                <TextView
                    android:id="@+id/msgPoprSchedSuperNegTVId"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/negative_capsule_outer"
                    android:gravity="center"
                    android:text="DELETE ALL"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_tab_small_size" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>