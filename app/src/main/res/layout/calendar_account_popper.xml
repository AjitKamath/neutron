<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accountPopperLLId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/card_background_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="@dimen/layout_header_size"
        android:background="@color/finappleTheme"
        android:elevation="@dimen/layout_header_elevation"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/accountPoppeTitleLLId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accountPopperTitleTVId"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:gravity="center"
                    android:maxLength="25"
                    android:text="Mmmmmmmmmm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_header_title_size" />

                <ImageView
                    android:id="@+id/accountPopperEditIVId"
                    android:layout_marginRight="5dp"
                    android:layout_width="@dimen/image_header_size"
                    android:layout_height="@dimen/image_header_size"
                    android:background="@drawable/edit_white" />

                <ImageView
                    android:id="@+id/accountPopperDelIVId"
                    android:layout_width="@dimen/image_header_size"
                    android:layout_height="@dimen/image_header_size"
                    android:background="@drawable/delete_white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="INR"
                android:textSize="30sp"
                android:textColor="@color/finappleCurrencyCodeColor"
                android:gravity="center" />

            <TextView
                android:id="@+id/accountPopperBalanceTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-999.99M"
                android:textColor="@color/finappleCurrencyNegColor"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/finappleCurrencyApproxColor"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:id="@+id/accountPopperDividerViewId"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/finappleThemeDark" />

        <LinearLayout
            android:id="@+id/accountPopperLastTransactionLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Transaction"
                android:textColor="@color/finappleThemeDark"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/transactionIndicator" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/accountPopperTransactionCategoryTVId"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:maxLength="25"
                            android:text="Mmmmmmmmm"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="INR"
                                android:textSize="14sp"
                                android:textColor="@color/finappleCurrencyCodeColor"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/accountPopperTransactionAmtTVId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-999.99M"
                                android:textColor="@color/finappleCurrencyNegColor"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:textColor="@color/finappleCurrencyApproxColor"
                                android:textSize="8sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/accountPopperTransactionDateTVId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="31 Sep '15"
                        android:textColor="@color/tertiaryText"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/accountPopperDividerTwoViewId"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/finappleThemeDark" />

        <LinearLayout
            android:id="@+id/accountPopperLastTransferLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Transfer"
                android:textColor="@color/finappleThemeDark"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="@color/transferIndicator" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/accountPopperTransferFromTVId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="25"
                                android:text="Mmmmmmmmm"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:maxLength="2"
                                android:text="To"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/accountPopperTransferToTVId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="25"
                                android:text="Mmmmmmmmm"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:gravity="top|right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:paddingTop="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="INR"
                                    android:textSize="14sp"
                                    android:textColor="@color/finappleCurrencyCodeColor"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/accountPopperTransferAmtTVId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="999.99M"
                                    android:textColor="@color/finappleCurrencyPosColor"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+"
                                    android:gravity="center"
                                    android:textColor="@color/finappleCurrencyApproxColor"
                                    android:textSize="8sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/accountPopperTransferDateTVId"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="31 Sep '15"
                                android:textColor="@color/tertiaryText"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
