<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/card_background_selector"
    android:id="@+id/transferDtlPopperLLId"
    android:padding="10dp"
    android:gravity="center"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tranDtlPopperSchTranLLId"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transferDtlPopperDateTVId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|center_vertical"
                    android:text="28 mar '15"
                    android:textColor="@color/Orange"
                    android:textSize="15sp"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/tranferDtlPopperEditIVId"
                android:layout_width="@dimen/image_header_size"
                android:layout_height="@dimen/image_header_size"
                android:src="@drawable/edit_grey"/>

            <ImageView
                android:id="@+id/transferDtlPopperDelIVId"
                android:layout_width="@dimen/image_header_size"
                android:layout_height="@dimen/image_header_size"
                android:layout_marginLeft="10dp"
                android:onClick="showMessagePopper"
                android:src="@drawable/delete_grey"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="INR"
                android:textSize="40sp"
                android:textColor="@color/finappleCurrencyCodeColorLight"
                android:gravity="center" />

            <TextView
                android:id="@+id/transferDtlPopperAmtTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999.99"
                android:textColor="@color/finappleCurrencyPosColor"
                android:textSize="40sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/finappleCurrencyApproxColor"
                android:textSize="20sp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="15dp"
            android:background="@color/finappleTheme"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transferDtlPopperFromAccTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:text="MMMMMMMMM"
                android:textColor="@color/finappleCurrencyNegColor"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textColor="@color/tertiaryText"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transferDtlPopperToAccTVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:text="MMMMMMMMM"
                android:textColor="@color/finappleCurrencyPosColor"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transferDtlPopperNoteLLId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textColor="@color/tertiaryText"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/transferDtlPopperNoteTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLength="50"
                android:text="MMMMMMMMMMMMMMMMMM"
                android:textColor="@color/finappleTheme"
                android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/finappleTheme"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="created on:"
                android:textColor="@color/greyDays"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/transferDtlPopperCreateTVId"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="28 mar '15"
                android:textColor="@color/Red"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="last updated:"
                android:textColor="@color/greyDays"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/transferDtlPopperUpdtdTVId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="never"
                android:textColor="@color/Red"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>