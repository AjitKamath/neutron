<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/finappleThemeDark</item>
        <item name="colorPrimaryDark">@color/finappleThemeDark</item>
        <item name="colorAccent">@color/finappleTheme</item>
        <item name="android:colorForeground">@color/finappleThemeDark</item>
        <item name="android:navigationBarColor">@color/finappleThemeDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <declare-styleable name="FABToolbarLayout">
        <attr name="showDuration" format="integer" />
        <attr name="hideDuration" format="integer" />
        <attr name="verticalMargin" format="dimension" />
        <attr name="horizontalMargin" format="dimension" />
        <attr name="fadeInPivotX" format="dimension" />
        <attr name="fadeInPivotY" format="dimension" />
        <attr name="fadeInFraction" format="float" />
        <attr name="fabId" format="reference" />
        <attr name="containerId" format="reference" />
        <attr name="fabToolbarId" format="reference" />
        <attr name="fabDrawableAnimationEnabled" format="boolean" />
    </declare-styleable>

    <style name="fragment_theme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/finappleThemeDark</item>

        <!-- No need to override 'datePickerStyle' -->
        <!-- <item name="android:datePickerStyle">@style/MyDatePickerStyle</item> -->
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/finappleTheme</item>
        <item name="android:calendarTextColor">@color/calendarThisMonthDate</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/calendarTodayDate</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_expand</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

